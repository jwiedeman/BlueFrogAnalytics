---
import Layout from '../layouts/main.astro';
---

<Layout title="Debug Links">
  <h1 class="text-2xl font-bold mb-4">All Site Pages</h1>
  <ul class="space-y-1 list-disc pl-5">
    {Object.keys(import.meta.glob('./**/*.{astro,md,mdx}')).filter(p => !p.includes('/debug-links.astro')).map(p => {
      let route = p.replace('./', '/').replace(/(index)?\.(astro|mdx|md)$/,'');
      if (route === '') route = '/';
      return <li><a href={route}>{route}</a></li>;
    })}
  </ul>
</Layout>
