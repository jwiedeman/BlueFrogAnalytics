---
layout: '../../layouts/main.astro'
title: 'UI Components Demo'
---

<section class="py-8">
  <div class="max-w-3xl mx-auto space-y-8">
    <h1 class="text-3xl font-bold text-center">UI Components Demo</h1>

    <section class="space-y-2">
      <h2 class="text-xl font-semibold">Buttons</h2>
      <div class="flex gap-2">
        <button class="px-4 py-2 bg-blue-600 text-white rounded">Primary</button>
        <button class="px-4 py-2 bg-gray-600 text-white rounded">Secondary</button>
        <button class="px-4 py-2 border rounded">Outline</button>
      </div>
    </section>

    <section class="space-y-2">
      <h2 class="text-xl font-semibold">Form Controls</h2>
      <div class="space-y-2">
        <div>
          <label for="text-input-1" class="block">Text Input</label>
          <input id="text-input-1" type="text" class="w-full border rounded p-2" placeholder="Placeholder text" />
        </div>
        <div>
          <label for="select-1" class="block">Select</label>
          <select id="select-1" class="w-full border rounded p-2">
            <option>Option 1</option>
            <option>Option 2</option>
            <option>Option 3</option>
          </select>
        </div>
      </div>
    </section>

    <section class="space-y-2">
      <h2 class="text-xl font-semibold">Accordion</h2>
      <details class="border rounded">
        <summary class="cursor-pointer p-2">Section 1</summary>
        <div class="p-2">Content 1</div>
      </details>
      <details class="border rounded">
        <summary class="cursor-pointer p-2">Section 2</summary>
        <div class="p-2">Content 2</div>
      </details>
    </section>
  </div>
</section>
