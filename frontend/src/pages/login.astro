---
layout: '../layouts/main.astro'
title: 'Client Login'
---

<div class="container mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4">Client Login</h1>
    <form class="space-y-4 max-w-md">
      <div>
        <label class="block mb-1" for="email">Email *</label>
        <input type="email" id="email" class="w-full border rounded px-3 py-2" required />
      </div>
      <div>
        <label class="block mb-1" for="password">Password *</label>
        <input type="password" id="password" class="w-full border rounded px-3 py-2" required />
      </div>
      <button type="submit" class="px-4 py-2 bg-primary text-white rounded">Log In</button>
    </form>
  </div>
