<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Carbon Components Examples</title>
    <meta name="robots" content="noindex,nofollow" />

    <link rel="stylesheet" href="https://unpkg.com/carbon-components/css/carbon-components.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;600&display=swap" />
    <link rel="stylesheet" href="/css/carbon.css" />
    <script src="https://unpkg.com/carbon-components/scripts/carbon-components.min.js" defer></script>
    <script>
      window.addEventListener('DOMContentLoaded', () => {
        if (window.CarbonComponents) {
          window.CarbonComponents.watch();
        }
      });
    </script>
  </head>
  <body>

    <main class="container bx--grid bx--grid--condensed">
      <h1>Carbon Components Examples</h1>

      <section>
        <h2>Buttons</h2>
        <button class="bx--btn bx--btn--primary">Primary</button>
        <button class="bx--btn bx--btn--secondary">Secondary</button>
        <button class="bx--btn bx--btn--tertiary">Tertiary</button>
        <button class="bx--btn bx--btn--ghost">Ghost</button>
      </section>

      <section>
        <h2>Text Input</h2>
        <div class="bx--form-item">
          <label for="text-input-1" class="bx--label">Text Input</label>
          <input id="text-input-1" type="text" class="bx--text-input" placeholder="Placeholder text" />
        </div>
      </section>

      <section>
        <h2>Dropdown</h2>
        <div class="bx--form-item">
          <div data-dropdown class="bx--dropdown">
            <button class="bx--dropdown-trigger" aria-haspopup="true" aria-expanded="false">
              <span class="bx--dropdown-label">Choose an option</span>
              <svg class="bx--dropdown__arrow" width="10" height="5" aria-hidden="true">
                <path d="M0 0l5 5 5-5z" />
              </svg>
            </button>
            <ul class="bx--dropdown-list" role="menu">
              <li class="bx--dropdown-item" role="menuitem"><span class="bx--dropdown-link">Option 1</span></li>
              <li class="bx--dropdown-item" role="menuitem"><span class="bx--dropdown-link">Option 2</span></li>
              <li class="bx--dropdown-item" role="menuitem"><span class="bx--dropdown-link">Option 3</span></li>
            </ul>
          </div>
        </div>
      </section>

      <section>
        <h2>Tabs</h2>
        <div data-tabs class="bx--tabs">
          <ul class="bx--tabs__nav" role="tablist">
            <li class="bx--tabs__nav-item bx--tabs__nav-item--selected" data-target="#tab-1" role="tab">Tab 1</li>
            <li class="bx--tabs__nav-item" data-target="#tab-2" role="tab">Tab 2</li>
          </ul>
          <div id="tab-1" class="bx--tab-content" role="tabpanel">Tab panel 1</div>
          <div id="tab-2" class="bx--tab-content" role="tabpanel" hidden>Tab panel 2</div>
        </div>
      </section>

      <section>
        <h2>Accordion</h2>
        <ul data-accordion class="bx--accordion">
          <li class="bx--accordion__item">
            <button class="bx--accordion__heading" aria-expanded="false" aria-controls="pane1">
              <svg aria-hidden="true" class="bx--accordion__arrow" width="16" height="16">
                <path d="M8 12L3 7l1.41-1.41L8 9.17l3.59-3.58L13 7z" />
              </svg>
              <div class="bx--accordion__title">Section 1</div>
            </button>
            <div id="pane1" class="bx--accordion__content">
              <p>Content 1</p>
            </div>
          </li>
          <li class="bx--accordion__item">
            <button class="bx--accordion__heading" aria-expanded="false" aria-controls="pane2">
              <svg aria-hidden="true" class="bx--accordion__arrow" width="16" height="16">
                <path d="M8 12L3 7l1.41-1.41L8 9.17l3.59-3.58L13 7z" />
              </svg>
              <div class="bx--accordion__title">Section 2</div>
            </button>
            <div id="pane2" class="bx--accordion__content">
              <p>Content 2</p>
            </div>
          </li>
        </ul>
      </section>

      <section>
        <h2>Breadcrumb</h2>
        <nav class="bx--breadcrumb" aria-label="breadcrumb">
          <ol class="bx--breadcrumb-list">
            <li class="bx--breadcrumb-item"><a href="#">Home</a></li>
            <li class="bx--breadcrumb-item"><a href="#">Category</a></li>
            <li class="bx--breadcrumb-item"><span>Current page</span></li>
          </ol>
        </nav>
      </section>

      <section>
        <h2>Pagination</h2>
        <div data-pagination class="bx--pagination" data-page-size="10">
          <div class="bx--pagination__left">
            <span class="bx--pagination__text">1 of 5 pages</span>
          </div>
          <div class="bx--pagination__right">
            <button class="bx--pagination__button bx--pagination__button--backward" aria-label="Backward"></button>
            <button class="bx--pagination__button bx--pagination__button--forward" aria-label="Forward"></button>
          </div>
        </div>
      </section>

      <section>
        <h2>Modal</h2>
        <button data-modal-target="#example-modal" class="bx--btn bx--btn--primary">Open Modal</button>
        <div data-modal id="example-modal" class="bx--modal" tabindex="-1" role="dialog">
          <div class="bx--modal-container">
            <p class="bx--modal-header__label bx--type-delta">Label</p>
            <p class="bx--modal-header__heading bx--type-beta">Example Modal</p>
            <div class="bx--modal-content">Modal content goes here.</div>
            <div class="bx--modal-footer">
              <button class="bx--btn bx--btn--secondary" data-modal-close>Close</button>
              <button class="bx--btn bx--btn--primary">Save</button>
            </div>
          </div>
        </div>
      </section>

      <section>
        <h2>Toast Notification</h2>
        <div class="bx--toast-notification" role="alert">
          <div class="bx--toast-notification__details">
            <h3 class="bx--toast-notification__title">Info</h3>
            <p class="bx--toast-notification__subtitle">This is an info notification.</p>
          </div>
          <button class="bx--toast-notification__close-button" type="button" aria-label="close">
            <svg aria-hidden="true" focusable="false" width="10" height="10">
              <path d="M10 1.41L8.59 0 5 3.59 1.41 0 0 1.41 3.59 5 0 8.59 1.41 10 5 6.41 8.59 10 10 8.59 6.41 5z" />
            </svg>
          </button>
        </div>
      </section>

      <section>
        <h2>Tag</h2>
        <span class="bx--tag bx--tag--green">Green tag</span>
      </section>

    </main>

  </body>
</html>

<style>
  .container {
    max-width: var(--sl-content-width);
    margin: 2rem auto;
    padding: 0 1rem;
  }
  section {
    margin-bottom: 2rem;
  }
  section > h2 {
    margin: 1.5rem 0 1rem;
  }
</style>
