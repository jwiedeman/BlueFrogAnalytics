---
import DocLayout from '../components/DocLayout.astro';
import FirebaseScripts from '../components/FirebaseScripts.astro';
import loginImage from '../assets/login.jpg';

const title = 'Client Login';
const description = 'Sign in to access the Blue Frog Analytics dashboard.';
---
<DocLayout title={title} description={description}>
  <section class="container my-5">
    <div class="row g-0 rounded overflow-hidden">
      <div class="col-md-6 bg-white p-5">
        <div class="mb-4 text-center">
          <i class="bi bi-stars fs-1 text-primary"></i>
          <h2 class="fw-bold">Welcome back!</h2>
          <p class="text-muted">Enter to get unlimited access to data &amp; information.</p>
        </div>
        <form id="login-form">
          <div class="mb-3">
            <label for="login-email" class="form-label">Email *</label>
            <input type="email" class="form-control" id="login-email" placeholder="Enter your mail address" required />
          </div>
          <div class="mb-3">
            <label for="login-password" class="form-label">Password *</label>
            <div class="input-group">
              <input type="password" class="form-control" id="login-password" placeholder="Enter password" required />
              <button type="button" class="btn btn-outline-secondary"><i class="bi bi-eye-slash"></i></button>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="rememberMe" checked />
              <label class="form-check-label" for="rememberMe">Remember me</label>
            </div>
            <a href="#" class="text-decoration-none">Forgot your password?</a>
          </div>
          <div class="d-grid mb-3">
            <button type="submit" class="btn btn-primary">Log In</button>
          </div>
          <div class="text-center my-2">Or, login with</div>
          <div class="d-grid">
            <button type="button" id="google-login" class="btn btn-outline-secondary">
              <i class="bi bi-google me-2"></i> Sign up with Google
            </button>
          </div>
          <div id="login-alert" class="alert d-none mt-3" role="alert"></div>
          <div class="mt-2">
            <small class="text-muted">Magiclink login feature coming soon.</small>
          </div>
        </form>
      </div>
      <div
        class="col-md-6 d-none d-md-block"
        style={`background:url('${loginImage.src}') center/cover no-repeat;`}
      ></div>
    </div>
  </section>

  <div class="modal fade" id="confirm-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content bg-dark text-light">
        <form id="confirm-form">
          <div class="modal-header border-0">
            <h5 class="modal-title">Create Account</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p class="mb-3">Enter your password again to create a new account.</p>
            <input type="hidden" id="confirm-email" />
            <div class="mb-3">
              <label for="confirm-password" class="form-label">Password</label>
              <input type="password" class="form-control" id="confirm-password" required />
            </div>
            <div class="mb-3">
              <label for="confirm-password2" class="form-label">Confirm Password</label>
              <input type="password" class="form-control" id="confirm-password2" required />
            </div>
          </div>
          <div class="modal-footer border-0">
            <button type="submit" class="btn btn-primary w-100">Create Account</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <FirebaseScripts />
</DocLayout>
