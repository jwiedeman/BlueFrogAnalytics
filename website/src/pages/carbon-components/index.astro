---
import DocLayout from '../../components/DocLayout.astro';
---
<DocLayout title="Bootstrap Components" description="Bootstrap component examples" fluid={true}>
  <main class="container py-4">
    <h1>Bootstrap Components Examples</h1>

    <section class="my-4">
      <h2>Buttons</h2>
      <button class="btn btn-primary">Primary</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-outline-primary">Outline</button>
    </section>

    <section class="my-4">
      <h2>Form Controls</h2>
      <div class="mb-3">
        <label for="text-input-1" class="form-label">Text Input</label>
        <input id="text-input-1" type="text" class="form-control" placeholder="Placeholder text" />
      </div>
      <div class="mb-3">
        <label for="select-1" class="form-label">Select</label>
        <select id="select-1" class="form-select">
          <option>Option 1</option>
          <option>Option 2</option>
          <option>Option 3</option>
        </select>
      </div>
    </section>

    <section class="my-4">
      <h2>Accordion</h2>
      <div class="accordion" id="demoAccordion">
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Section 1</button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#demoAccordion">
            <div class="accordion-body">Content 1</div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Section 2</button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#demoAccordion">
            <div class="accordion-body">Content 2</div>
          </div>
        </div>
      </div>
    </section>
  </main>
</DocLayout>
