---
import DashboardLayout from '../../../components/DashboardLayout.astro';

const title = 'Specification';
const description = 'Project specifications and docs.';
---
<DashboardLayout title={title} description={description}>
  <section class="container py-5">
    <h1 class="text-center mb-4">Specification</h1>
    <ul class="list-group list-group-flush">
      <li class="list-group-item spec-item">
        <a class="text-decoration-none d-block" href="/dashboard/specification/components">Components</a>
      </li>
      <li class="list-group-item spec-item">
        <a class="text-decoration-none d-block" href="/dashboard/specification/events">Events</a>
      </li>
      <li class="list-group-item spec-item">
        <a class="text-decoration-none d-block" href="/dashboard/specification/dimensions">Dimensions</a>
      </li>
      <li class="list-group-item spec-item">
        <a class="text-decoration-none d-block" href="/dashboard/specification/products">Products</a>
      </li>
    </ul>
  </section>
  <script type="module">
    document.addEventListener('DOMContentLoaded', () => {
      const init = () => {
        window.onAuthStateChanged(window.firebaseAuth, user => {
          if (!user) {
            window.location.href = '/login';
          }
        });
      };
      if (window.firebaseAuth) {
        init();
      } else {
        document.addEventListener('firebase-init', init, { once: true });
      }
    });
  </script>
</DashboardLayout>
