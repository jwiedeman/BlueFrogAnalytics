---
import DashboardLayout from '../../components/DashboardLayout.astro';

const title = 'Accessibility';
const description = 'Accessibility audit results.';
---
<DashboardLayout title={title} description={description}>
  <section class="container my-4">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="text-center mb-4">
          <h1>Accessibility Audit</h1>
          <p>Run Lighthouse accessibility checks on your page.</p>
        </div>
        <div class="mb-3">
          <label for="domain-select" class="form-label">Select Domain</label>
          <select id="domain-select" class="form-select"></select>
        </div>
        <div id="domain-results" class="mb-4"></div>
        <div id="page-results" class="mb-4"></div>
        <form id="a11y-form" class="row gy-2 gx-3 align-items-end mb-3">
          <div class="col-md-8">
            <label for="a11y-url" class="form-label">Enter URL</label>
            <input type="url" id="a11y-url" name="url" placeholder="https://example.com" class="form-control" />
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-primary mt-3">Run Test</button>
          </div>
        </form>
        <pre id="a11y-results" class="p-3 rounded"></pre>
      </div>
    </div>
  </section>
  <script type="module">
    document.addEventListener('DOMContentLoaded', () => {
      const init = () => {
        window.onAuthStateChanged(window.firebaseAuth, user => {
          if (!user) {
            window.location.href = '/login';
          }
        });
      };
      if (window.firebaseAuth) {
        init();
      } else {
        document.addEventListener('firebase-init', init, { once: true });
      }
    });
  </script>
  <script type="module" src="/js/a11y-dashboard.js" defer></script>
  <script type="module" src="/js/accessibility-check.js" defer></script>
</DashboardLayout>
