---
import DashboardLayout from '../../components/DashboardLayout.astro';

const title = 'SSL';
const description = 'SSL monitoring and tools.';
---
<DashboardLayout title={title} description={description}>
  <section class="container py-5">
    <div class="text-center mb-4">
      <h1 class="mb-0">SSL Overview</h1>
      <p>Check SSL certificate details for a domain or specific page.</p>
    </div>
    <form id="ssl-form" class="row gy-2 gx-3 align-items-end justify-content-center mb-3">
      <div class="col-md-4">
        <label for="ssl-domain" class="form-label">Domain</label>
        <input id="ssl-domain" type="text" class="form-control" placeholder="example.com" />
      </div>
      <div class="col-md-5">
        <label for="ssl-url" class="form-label">Page URL (optional)</label>
        <input id="ssl-url" type="url" class="form-control" placeholder="https://example.com/page" />
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary mt-3">Fetch</button>
      </div>
    </form>
    <div id="ssl-results"></div>
  </section>
  <script type="module">
    document.addEventListener('DOMContentLoaded', () => {
      const init = () => {
        window.onAuthStateChanged(window.firebaseAuth, user => {
          if (!user) window.location.href = '/login';
        });
      };
      if (window.firebaseAuth) {
        init();
      } else {
        document.addEventListener('firebase-init', init, { once: true });
      }
    });
  </script>
  <script src="/js/ssl-dashboard.js" type="module"></script>
</DashboardLayout>
