{
  "name": "qatool-js",
  "version": "0.1.0",
  "description": "Cross-platform desktop QA tool using Electron and Playwright",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install-browsers": "npx playwright install --with-deps"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "playwright": "^1.42.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.example.qatool",
    "mac": {"target": ["dmg"]},
    "win": {"target": ["nsis"]}
  }
}